<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Airplane Site</title>
    <!-- favicon for the website -->
    <link rel="shortcut icon" type="image/jpg" href="https://freepngimg.com/download/temp/58342-clouds-mosque-airplane-al-bahia-youtube-png-file-hd_32x32.ico"/>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/createListing.js"></script>
    <script type="text/javascript" src="/scripts/getMyListings.js"></script>

  </head>

  <body id="body">
    <!-- creates our  navbar over our bg image-->
    <div class="image">
    <nav class="navbar navbar-default navbar-fixed-top">
            <div class="nav-container">
              <!-- navbar with user links that appear after login -->
                <div class="nav navbar-nav navbar-right">
                  <a href ="/" id="homelink"> Home</a>
                  <form action="api/listings/listings" method="POST" id="mylistingslink">
                    <button type="submit" class="sellerLinks hidden">My Listings</button>
                  </form>
                  <a href ="/" id="createlistingslink" class="sellerLinks hidden"> Create Listing</a>
                  <a href ="/" id="favouritelistingslink" class="sellerLinks hidden"> Favourite Listings</a>
                    <form action="/api/users" method="GET" id="login">
                      <textarea id="login-text" placeholder="username here please"></textarea>
                      <button type="submit" class="login-button">Login</button>
                    </form>
                  <div id="currentUser"></div>
                  </div>
            </div>
    </nav>
    <!-- search bar attached to an SQL query to search listings -->
    <div class="search-bar">
      <form action="/api/listings/search"  method="POST" id="search">
        <div class="wrapper">
          <p class="airplane-nav">Buy Some Airplanes and Spaceships!</p>
          <div class="search-container">
            <input name="min_price" type="text" class="search-price" placeholder="Minimum Price">
            <input name="max_price" type="text" class="search-price" placeholder="Maximum Price">
            <input name="make" type="text" class="seach-make" placeholder="Make">
            <input name="model" type="text" class="search-model" placeholder="Model">
            <button type="submit" class="button">Search</button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <!-- page title is replaced with each type of page loading -->
  <p id="page-title">Featured Listings!</p>
  <main id="list">
    <div id="listings"></div>
  </main>
  </body>
</html>
